@model PIN_WebAPP.Models.ViewModels.IndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
    <div class="carousel-inner">
        @foreach (var carosel in Model.Carosel)
        {
            if (Model.Carosel.First() == carosel)
            {
                <div class="carousel-item active">
                    <img class="d-block w-100" style="width: 100%;" asp-append-version=" true" src="data:image/jpg;base64,@Convert.ToBase64String(carosel.Picture)" />
                </div>
            }
            else
            {
                <div class="carousel-item">
                    <img class="d-block w-100" style="width: 100%;" asp-append-version=" true" src="data:image/jpg;base64,@Convert.ToBase64String(carosel.Picture)" />
                </div>
            }
        }
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>



<div class="row">
    @foreach (var product in Model.Product)
    {
        <div class="col-3">

            <div><partial name="_ThumbnailAreaPartial" model="product" /></div>
        </div>

    }
</div>

